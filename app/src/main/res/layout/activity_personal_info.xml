<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />


    <RelativeLayout
        android:id="@+id/avatar_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/ripple_write_bg"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@mipmap/next_step"
            android:gravity="start|center_vertical"
            android:text="头像"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />

        <com.xmzj.mvp.views.CircleImageView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:src="@mipmap/default_head" />

    </RelativeLayout>

    <View style="@style/line_height_05" />


    <RelativeLayout
        android:id="@+id/nick_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/ripple_write_bg"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="昵称"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/nick_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginEnd="@dimen/dp_12"
            android:gravity="end"
            android:hint="请填写昵称"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>


    <View style="@style/line_height_05" />


    <RelativeLayout
        android:id="@+id/phone_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/ripple_write_bg"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:text="手机号码"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginEnd="@dimen/dp_12"
            android:gravity="end"
            android:hint="请填写手机号码"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <View style="@style/line_height_05" />


    <RelativeLayout
        android:id="@+id/email_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:text="邮箱"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_12"
            android:gravity="end"
            android:background="@null"
            android:hint="请填写邮箱"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <View style="@style/line_height_05" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TextView
            android:id="@+id/save_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_gray_round_30"
            android:gravity="center"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:text="保存"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>