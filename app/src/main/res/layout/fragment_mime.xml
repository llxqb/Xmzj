<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/ripple_write_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/clear_cache_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_24"
            android:paddingEnd="@dimen/dp_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清理缓存"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clear_cache_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@mipmap/next_step"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical|end"
                android:text="88"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View style="@style/line_height_1" />

        <LinearLayout
            android:id="@+id/version_update_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/ripple_write_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_24"
            android:paddingEnd="@dimen/dp_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本更新"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/version_update_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@mipmap/next_step"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical|end"
                android:text="1.0.1"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View style="@style/line_height_1" />
    </LinearLayout>


    <TextView
        android:id="@+id/logout_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/ripple_write_bg"
        android:drawableEnd="@mipmap/next_step"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:text="退出登录"
        android:textColor="@color/first_text_color"
        android:textSize="@dimen/sp_14" />


</RelativeLayout>
