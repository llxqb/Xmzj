<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="@dimen/dp_50">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/back_black" />

    <ImageView
        android:id="@+id/upload_history_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_8"
        android:src="@mipmap/huancun" />

    <ImageView
        android:id="@+id/play_history_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/upload_history_iv"
        android:padding="@dimen/dp_8"
        android:src="@mipmap/history" />


    <RelativeLayout
        android:id="@+id/search_content_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_toStartOf="@id/play_history_iv"
        android:layout_toEndOf="@id/back_iv"
        android:background="@drawable/bg_gray_round_30">

        <ImageView
            android:id="@+id/search_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:src="@mipmap/search" />

        <EditText
            android:id="@+id/search_content_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_toStartOf="@id/search_iv"
            android:background="@null" />

    </RelativeLayout>


</RelativeLayout>
